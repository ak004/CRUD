<h3>{{viewtitle}}</h3>

<form action="/employee" method="POST" autocomplete="off" aria-autocomplete="none">
    <input type="hidden" name="_id" value="{{employee._id}}">
    <div class="form-group">
        <label>Full Name</label>
        <input type="text" class="form-control" name="fullname" placeholder="Full Name" value="{{employee.fullname}}" required>
    </div>
      <div class="form-group">
        <label>Email</label>
        <input type="email" class="form-control" name="email" placeholder="Email" value="{{employee.email}}" required>
    </div>
      <div class="form-row">
          <div class="form-group col-md-6">
        <label>Mobile</label>
        <input type="text" class="form-control" name="mobile" placeholder="Mobile" value="{{employee.mobile}}"required>
    </div>
    <div class="form-group col-md-6">
        <label>City</label>
        <input type="text" class="form-control" name="city" placeholder="City" value="{{employee.city}}" required>
    </div>
</div>
<div class="from-group">
    <button type="submit" class="btn btn-info"><i class="a fa-database"></i>submit</button>
    <a class="btn btn-secondary" href="/employee/list"><i class="fa fa-list-alt"></i> Veiw All</a>
</div>
</form>